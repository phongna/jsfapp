<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>hub-ear</artifactId>
	<packaging>ear</packaging>
	<parent>
		<artifactId>hub</artifactId>
		<groupId>vn.com.aisoft</groupId>
		<version>1.0.0</version>
	</parent>

	<dependencies>
		<!-- web and ejb modules -->
		<dependency>
			<groupId>vn.com.aisoft</groupId>
			<artifactId>hub-common</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
			<exclusions>
				<exclusion>
					<artifactId>log4j</artifactId>
					<groupId>log4j</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>vn.com.aisoft</groupId>
			<artifactId>hub-dao</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
			<exclusions>
				<exclusion>
					<artifactId>eclipselink</artifactId>
					<groupId>org.eclipse.persistence</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>vn.com.aisoft</groupId>
			<artifactId>hub-dto</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>vn.com.aisoft</groupId>
			<artifactId>hub-client</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>vn.com.aisoft</groupId>
			<artifactId>hub-business</artifactId>
			<version>1.0.0</version>
			<type>ejb</type>
			<exclusions>
				<exclusion>
					<artifactId>log4j</artifactId>
					<groupId>log4j</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>vn.com.aisoft</groupId>
			<artifactId>hub-web</artifactId>
			<version>1.0.0</version>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>vn.com.aisoft</groupId>
			<artifactId>pdf-fonts</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>hub</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.9.1</version>
				<configuration>
					<applicationName>hub</applicationName>
					<displayName>hub</displayName>
					<modules>
						<jarModule>
							<groupId>vn.com.aisoft</groupId>
							<artifactId>hub-common</artifactId>
						</jarModule>
						<jarModule>
							<groupId>vn.com.aisoft</groupId>
							<artifactId>hub-dao</artifactId>
						</jarModule>
						<jarModule>
							<groupId>vn.com.aisoft</groupId>
							<artifactId>hub-dto</artifactId>
						</jarModule>
						<jarModule>
							<groupId>vn.com.aisoft</groupId>
							<artifactId>hub-client</artifactId>
						</jarModule>
						<webModule>
							<artifactId>hub-web</artifactId>
							<groupId>vn.com.aisoft</groupId>
							<contextRoot>/hub</contextRoot>
						</webModule>
						<ejbModule>
							<groupId>vn.com.aisoft</groupId>
							<artifactId>hub-business</artifactId>
						</ejbModule>
					</modules>
					<generateApplicationXml>true</generateApplicationXml>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<outputDirectory>D:\apps\wildfly-8.1.0.Hub\standalone\deployments</outputDirectory>
				</configuration>
			</plugin>
			<!-- WildFly plugin to deploy ear -->
			<!-- <plugin> <groupId>org.wildfly.plugins</groupId> <artifactId>wildfly-maven-plugin</artifactId> <version>1.0.2.Final</version> 
				<configuration> <filename>hub.ear</filename> <skip>false</skip> </configuration> </plugin> -->
		</plugins>
	</build>
</project>